<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Search Layout -->
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- Search Panel -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search__search_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Search Field -->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/search__search_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/search__search_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:iconifiedByDefault="false"
                app:queryHint="Search venues..."
                android:background="@drawable/bg_search_field" />

            <!-- Search Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/search__search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Close Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/search__search_btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Chips Scroll View -->
        <HorizontalScrollView
            android:id="@+id/search__search_chips_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/search__search_chips_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true" />

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Venue Icons Layout -->
    <FrameLayout
        android:id="@+id/search__venue_icons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_layout"
        android:visibility="gone"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_list_venue_icons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3" />

    </FrameLayout>

    <!-- Venue List Layout -->
    <FrameLayout
        android:id="@+id/search__venue_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_layout"
        android:visibility="gone"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_list_venues"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </FrameLayout>

    <!-- Transparent Background Overlay -->
    <FrameLayout
        android:id="@+id/search__transparent_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false" />

    <!-- Suggestions Label -->
    <TextView
        android:id="@+id/suggestionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Suggestions"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Suggestions Cards -->
    <LinearLayout
        android:id="@+id/suggestionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suggestionsText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- Suggestion Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/suggestionCard1"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/suggestionIcon1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/suggestionText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Reception"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Suggestion Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/suggestionCard2"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/suggestionIcon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/suggestionText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Office"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Suggestion Card 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/suggestionCard3"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/suggestionIcon3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/suggestionText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Hall"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Suggestion Card 4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/suggestionCard4"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/suggestionIcon4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/suggestionText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Doctor"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>